@model List<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12 mx-auto">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Username</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>
                        <a asp-action="AssignAdminRole" asp-route-id=@user.Id class="btn">Admin</a>
                        <a asp-action="AssignMemberRole" asp-route-id=@user.Id class="btn">User</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>